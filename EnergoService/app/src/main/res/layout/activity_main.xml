<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
        <ImageView
            android:id="@+id/LoadingImage"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="0dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@id/secondToolbar"
            app:layout_constraintBottom_toBottomOf="@id/secondToolbar"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/loading"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/firstToolbar"
        android:orientation="horizontal"
        android:backgroundTint="@color/bc_layout"
        android:background="@drawable/toolbarborder">
        <ListView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LampsListView"
            >
        </ListView>


    </LinearLayout>
        <!-- Панель с вкладками этажей-->
        <LinearLayout
            android:id="@+id/floorPanelLay"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toRightOf="@id/firstToolbar"
            app:layout_constraintRight_toLeftOf="@id/secondToolbar">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/background">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_weight="85"
                    android:layout_height="25dp">
                    <LinearLayout
                        android:id="@+id/floorPanelsLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>
                <ImageButton
                    android:id="@+id/closePanelBtn"
                    android:layout_width="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/close"
                    android:layout_marginRight="5dp"
                    android:background="@color/red"
                    android:layout_height="25dp"/>
                <ImageButton
                    android:id="@+id/addPanelBtn"
                    android:layout_width="25dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/addfolder"
                    android:padding="2dp"
                    android:background="@color/blue"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--Блок с планом здания -->
                <LinearLayout
                    android:id="@+id/imageWrap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    app:layout_constraintTop_toBottomOf="@id/floorPanelLay"
                    app:layout_constraintLeft_toRightOf="@id/firstToolbar"
                    app:layout_constraintRight_toLeftOf="@id/secondToolbar"
                    tools:ignore="Deprecated">


                    <RelativeLayout
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/planLayout"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:adjustViewBounds="true"
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cropToPadding="false"
                            />


                </RelativeLayout>
                </LinearLayout>
        <!--Второй тул-бар -->
    <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/secondToolbar"
                    android:backgroundTint="@color/bc_layout"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/toolbarborder"
                    tools:layout_editor_absoluteY="0dp">
        <!--Здесь будут располагаться кнопки-->
        <GridLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <!--Кнопка добавления светильника -->
            <ImageView
                android:id="@+id/addBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/addbtn"
                android:background="@color/white"
                android:padding="2dp"
                />
            <ImageView
                android:id="@+id/addMultipleBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/addmultiplebtn"
                android:background="@color/white"
                android:padding="2dp"
                />
            <!--Кнопка включения/выключения перемещения светильников -->
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/moveBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@color/white"
                android:src="@drawable/movebtn"
                />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/scaleBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:background="@color/white"
                android:src="@drawable/scalebtn"
                />
            <ImageButton
                android:id="@+id/rotateLamp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:background="@color/white"
                android:src="@drawable/rotate"
                android:layout_height="30dp">
            </ImageButton>

            <ImageView
                android:id="@+id/removeLamp"
                android:padding="5dp"
                android:src="@drawable/delete"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"

                android:layout_height="30dp">
            </ImageView>


            <ImageButton
                android:id="@+id/addMultipleRowsBtn"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:background="@color/white"
                android:src="@drawable/addmultiplerowbtn"
                android:layout_height="30dp">
            </ImageButton>



            <ImageButton
                android:id="@+id/openFile"
                android:scaleType="fitCenter"
                android:src="@drawable/upload"
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/saveFile"
                android:scaleType="fitCenter"
                android:src="@drawable/save"
                android:layout_marginLeft="0dp"
                android:layout_width="30dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp">
            </ImageButton>
            <ImageButton
                android:id="@+id/excelExport"
                android:scaleType="fitCenter"
                android:src="@drawable/excel"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp">
            </ImageButton>

        </GridLayout>

        <ScrollView
            android:id="@+id/globalScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolsGrid"
            tools:ignore="MissingConstraints">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/multipleRowsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/txtviewborder"
                    app:layout_constraintTop_toBottomOf="@+id/globalScroll">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:orientation="horizontal">
                    <TextView
                        android:text="Рядов:"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                        <Spinner
                            android:verticalScrollbarPosition="right"
                            android:id="@+id/spinColumns"
                            android:layout_marginLeft="-50dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:spinnerMode="dropdown" />
                    <EditText
                        android:layout_marginLeft="-40dp"
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:id="@+id/columnAmount"
                        />
                        <TextView
                            android:text="Линий:"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            />
                        <Spinner
                            android:verticalScrollbarPosition="right"
                            android:id="@+id/spinRows"
                            android:layout_marginLeft="-50dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:spinnerMode="dropdown" />
                        <EditText
                            android:layout_marginLeft="-40dp"
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:id="@+id/rowsAmount"
                            />
                        <TextView
                            android:text="Развернуть на 90:"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            />
                        <CheckBox
                            android:id="@+id/angleCheckbox"
                            />
                        <TextView/>
                        <Button
                            android:id="@+id/multipleRowsSubmit"
                            android:layout_height="30dp"
                            android:text="Подтвердить"
                            android:textSize="8sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/grey"
                            />
                    </GridLayout>
                </RelativeLayout>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:id="@id/buildingInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/multipleRowsInfo"
                android:text="Информация о плане"
                android:background="@drawable/txtviewborder"
                />

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/BuildingInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/buildingInfo"
            tools:layout_editor_absoluteX="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <TextView
                    android:text="Название:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/buildingName"
                    />
                <TextView
                    android:text="Этаж:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/floorNumber"
                    />
                <TextView
                    android:text="Адрес:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/adress"
                    />
                <Button
                    android:visibility="invisible"
                    android:id="@+id/submitBuilding"
                    android:layout_height="20dp"
                    android:text="Подтвердить"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grey"
                    />
            </GridLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@id/roomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/BuildingInfoView"
            android:text="Информация о помещении"
            android:background="@drawable/txtviewborder"
            />


        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/RoomInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/roomInfo"
            tools:layout_editor_absoluteX="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <TextView
                    android:text="Номер помещения:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-15dp"
                    android:text="0"
                    android:textSize="12dp"
                    android:id="@+id/roomNumber"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:text="Высота:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-15dp"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:id="@+id/roomHigh"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:text="Тип:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <Spinner
                    android:verticalScrollbarPosition="right"
                    android:id="@+id/spinTypes"
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:text="Дней:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <Spinner
                    android:verticalScrollbarPosition="right"
                    android:id="@+id/roomDays"
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:text="Часы:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <Spinner
                    android:verticalScrollbarPosition="right"
                    android:id="@+id/roomHours"
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:text="В выходные:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <Spinner
                    android:verticalScrollbarPosition="right"
                    android:id="@+id/roomHoursWeekends"
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:text="Потолок:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <Spinner
                    android:verticalScrollbarPosition="right"
                    android:id="@+id/roofType"
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:text="Комментарии:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <EditText
                    android:id="@+id/roomComments"
                    android:layout_marginLeft="-60dp"
                    android:layout_width="80dp"
                    android:textSize="12dp"
                    />
                <TextView
                    android:text="Cветильников:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:text="0"
                    android:textSize="12dp"
                    android:id="@+id/roomLamps"
                    android:layout_width="wrap_content"
                    />
                <Button
                    android:visibility="invisible"
                    android:id="@+id/submit"
                    android:layout_height="20dp"
                    android:text="Подтвердить"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grey"
                    />
            </GridLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@id/lampInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/RoomInfoView"
            android:text="Информация о светильнике"
            android:background="@drawable/txtviewborder"
            />
        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/lampInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/lampInfo"
            tools:layout_editor_absoluteX="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <TextView
                    android:text="Привязан к:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/lampRoom"
                    />
                <TextView
                    android:text="Тип:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/lampType"
                    />
                <TextView
                    android:text="Мощность:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <EditText
                    android:layout_marginLeft="-80dp"
                    android:layout_width="100dp"
                    android:textSize="12dp"
                    android:id="@+id/lampPower"
                    />
                <TextView
                    android:text="Комментарии:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <EditText
                    android:id="@+id/lampComments"
                    android:layout_marginLeft="-60dp"
                    android:layout_width="80dp"
                    android:textSize="12dp"
                    />
                <Button
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:id="@+id/submitLamp"
                    android:text="Подтвердить"
                    android:textColor="@color/black"
                    android:layout_marginBottom="60dp"
                    android:backgroundTint="@color/grey"
                    />
            </GridLayout>
        </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>